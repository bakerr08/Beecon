<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minWidth="25px"
    android:minHeight="25px">
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="80.0dp"
        android:id="@+id/relativeLayout1"
        android:layout_marginBottom="5.5dp">
        <EditText
            android:inputType="textPersonName"
            android:layout_height="wrap_content"
            android:id="@+id/txtFirstName"
            android:text="First Name"
            android:layout_marginLeft="10.0dp"
            android:layout_marginTop="30.0dp"
            android:layout_width="150.0dp" />
        <EditText
            android:inputType="textPersonName"
            android:layout_width="150.0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtLastName"
            android:text="Last Name"
            android:layout_toRightOf="@id/txtFirstName"
            android:layout_marginTop="30.0dp" />
    </RelativeLayout>
    <EditText
        android:inputType="textEmailAddress"
        android:layout_width="250.0dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtEmailSignUp"
        android:text="Email"
        android:layout_marginLeft="10.0dp"
        android:layout_marginTop="10.0dp" />
    <EditText
        android:layout_width="250.0dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtPasswordSignUp"
        android:layout_marginLeft="10.0dp"
        android:layout_marginTop="15.0dp"
        android:text="Password" />
    <EditText
        android:inputType="date"
        android:layout_width="250.0dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtDOB"
        android:text="Birthday (MM/DD/YYYY)"
        android:layout_marginLeft="10.0dp"
        android:layout_marginTop="35.0dp" />
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="50.0dp"
        android:id="@+id/relativeLayout2">
        <RadioButton
            android:text="Male"
            android:layout_width="133.8dp"
            android:layout_height="wrap_content"
            android:id="@+id/rbMale"
            android:layout_marginTop="15.0dp"
            android:layout_marginLeft="10.0dp" />
        <RadioButton
            android:text="Female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rbMale"
            android:id="@+id/rbFemale"
            android:layout_marginTop="15.0dp" />
    </RelativeLayout>
    <Button
        android:text="Submit"
        android:layout_width="115.0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnSubmit"
        android:layout_marginLeft="190.0dp"
        android:layout_marginTop="50.0dp" />
</LinearLayout>